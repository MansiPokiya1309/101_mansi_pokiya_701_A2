<!DOCTYPE html>
<html>
<head>
    <title>Registration Success</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2>Registration Successful</h2>
        
        <table class="table table-bordered">
            <tr><th>Username</th><td><%= userData.username %></td></tr>
            <tr><th>Email</th><td><%= userData.email %></td></tr>
            <tr><th>Gender</th><td><%= userData.gender %></td></tr>
            <tr><th>Hobbies</th><td><%= userData.hobbies.join(', ') %></td></tr>
            <tr>
                <th>Profile Picture</th>
                <td>
                    <% if (userData.profilePic) { %>
                        <img src="/uploads/profiles/<%= userData.profilePic.filename %>" width="100">
                        <a href="/download/profiles/<%= userData.profilePic.filename %>" class="btn btn-sm btn-primary">Download</a>
                    <% } else { %>
                        No profile picture uploaded
                    <% } %>
                </td>
            </tr>
            <tr>
                <th>Other Pictures</th>
                <td>
                    <% if (userData.otherPics.length > 0) { %>
                        <% userData.otherPics.forEach(pic => { %>
                            <img src="/uploads/others/<%= pic.filename %>" width="100">
                            <a href="/download/others/<%= pic.filename %>" class="btn btn-sm btn-primary">Download</a>
                        <% }); %>
                    <% } else { %>
                        No other pictures uploaded
                    <% } %>
                </td>
            </tr>
        </table>
        
        <a href="/" class="btn btn-secondary">Register Another User</a>
    </div>
</body>
</html>